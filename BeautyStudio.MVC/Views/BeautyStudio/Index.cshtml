@model IEnumerable<BeautyStudio.Application.Models.BeautyStudio.GetBeuatyStudioDto>

@{
    ViewData["Title"] = "Beauty Studios";
}

<h1>Beauty Studios</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model) 
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Created: @item.CreatedAt.ToString("dd/MM/yyyy")</p>
                <a href="#" class="btn btn-primary">Details</a>
                <a href="#" class="btn btn-outline-secondary">Edit</a>
            </div>

        </div>
    }
</div>
